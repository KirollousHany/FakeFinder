<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- Set the default inside color here -->
            <corners android:radius="0dp" /> <!-- Set the corner radius if needed -->
            <stroke
                android:width="3dp"
                android:color="@color/white" /> <!-- Set the default border color here -->
        </shape>
    </item>
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- Set the focused inside color here -->
            <corners android:radius="0dp" /> <!-- Set the corner radius if needed -->
            <stroke
                android:width="2dp"
                android:color="@color/turquoise" /> <!-- Set the focused border color here -->
        </shape>
    </item>
</selector>
